<%- include('../main.ejs') %> 

<div class="col-lg-12">
    <div class="card mb-4">
      <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
        <h6 class="m-0 font-weight-bold text-primary">Lista de Alunos Inscritos</h6>
      </div>
      <div class="table-responsive p-3">
        <% if(data.length > 0) { %> 
        <table class="table align-items-center table-flush table-hover" id="dataTableHover">
          <thead class="thead-light">
            <tr>
              <th>Aluno</th>
              <th>Ações</th>
            </tr>
          </thead>
          <tfoot>
            <tr>
              <th>Módulo</th>
              <th>Ações</th>
            </tr>
          </tfoot>
          <tbody>
            <%data.forEach(al => { %>
                <tr>
                    <td><%= al.username %></td>
                    <td>
                        <a href="/prof/stats/<%= module %>/students/<%= al.id %>" class="btn btn-primary">
                          Ver Estatísticas
                        </a>
                    </td>
                </tr>
            <% }) %>
          </tbody>
        </table>
        <% } else { %>
            <p>Não existe nenhum aluno inscrito no módulo</p>
        <% } %>
      </div>
    </div>
  </div>
</div>


<%- include('../footer.ejs') %> 
<script src="/static/dash/vendor/datatables/jquery.dataTables.min.js"></script>
<script src="/static/dash/vendor/datatables/dataTables.bootstrap4.min.js"></script>

<!-- Page level custom scripts -->
<script>
    $(document).ready(function () {
        //
        $('#dataTableHover').DataTable({
          language: {
              url: 'https://cdn.datatables.net/plug-ins/1.11.5/i18n/pt-PT.json',
          },
        
        });
});
</script>