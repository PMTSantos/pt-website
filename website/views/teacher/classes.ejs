<%- include('../main.ejs')  %> 

<div class="col-lg-12">
    <div class="card mb-4">
      <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
        <h6 class="m-0 font-weight-bold text-primary">Gerir Módulos</h6>
      </div>
      <div class="table-responsive p-3">
        <% if(data.length > 0) { %> 
        <table class="table align-items-center table-flush table-hover" id="dataTableHover">
          <thead class="thead-light">
            <tr>
              <th>Módulo</th>
              <th>Nome</th>
              <th>Ações</th>
            </tr>
          </thead>
          <tfoot>
            <tr>
              <th>Módulo</th>
              <th>Nome</th>
              <th>Ações</th>
            </tr>
          </tfoot>
          <tbody>
            <%data.forEach(turma => { %>
                <tr>
                    <td><%= turma.turma %></td>
                    <td><%= turma.nome %></td>
                    <td>
                        <a href="/prof/classes/<%= encodeURIComponent(turma.turma) %>/contents" class="btn btn-primary">Conteúdos</a>
                        <a href="/prof/classes/<%= encodeURIComponent(turma.turma) %>/evaluations" class="btn btn-primary">Testes</a>
                        <a href="/prof/classes/<%= encodeURIComponent(turma.turma) %>/results" class="btn btn-primary">Resultados</a>
                    </td>
                </tr>
            <% }) %>
          </tbody>
        </table>
        <% } else { %>
            <p>Não tem nenhum módulo designado</p>
        <% } %>
      </div>
    </div>
  </div>
</div>



<%- include('../footer.ejs')  %> 

<script src="/static/dash/vendor/datatables/jquery.dataTables.min.js"></script>
<script src="/static/dash/vendor/datatables/dataTables.bootstrap4.min.js"></script>

<!-- Page level custom scripts -->
<script>
    $(document).ready(function () {
        //
        $('#dataTableHover').DataTable({
        language: {
            url: 'https://cdn.datatables.net/plug-ins/1.11.5/i18n/pt-PT.json',
        },
    });
});
</script>